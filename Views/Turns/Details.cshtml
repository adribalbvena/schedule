@model tp_nt1.Models.Turn

@{
   ViewData["Title"] = "Detalles Turno";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>
</head>
<body>

<div>
    <h4>Turno</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Active)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Active)
            {
                <p>Activo</p>
            }
            else
            {
                <p>Inactivo</p>
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreationDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreationDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Patient)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Patient.FullName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Professional)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Professional.FullName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Confirmed)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.Confirmed)
            {
                <p>Confirmado</p>
            } else
            {
                <p>No Confirmado</p>
            }          
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CancelDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CancelDescription)
        </dd>
    </dl>
</div>
<div>
    @if((User.IsInRole(nameof(Role.Paciente))))
            {
              <a class="btn btn-outline-info" asp-action="MyTurns">Volver</a>
            } else if (((User.IsInRole(nameof(Role.Profesional)))))
            {
              <a class="btn btn-outline-info" asp-action="ProfessionalTurns">Volver</a>
            } else if (((User.IsInRole(nameof(Role.Administrador)))))
            {
              <a class="btn btn-outline-info" asp-action="Index">Volver</a>
            }
</div>
</body>
</html>
