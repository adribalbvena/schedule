@model tp_nt1.Models.Turn

@{
    ViewData["Title"] = "Crear Turno";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>
</head>
<body>

<h4>Nuevo Turno</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SelectDate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="medicalServiceId" value="@TempData["medicalServiceId"]" />
            <div class="form-group">
                <label asp-for="ProfessionalId" class="control-label"></label>
                <select name="professionalId" class="form-control" asp-items="ViewBag.ProfessionalId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Siguiente" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="SelectMedicalService" class="btn btn-outline-info ml-1">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
