@model tp_nt1.Models.Turn

@{
    ViewData["Title"] = "Crear Turno";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>
</head>
<body>

    <div>
        <h4>Confirmar Turno</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Nombre de la prestacion:
            </dt>
            <dd class="col-sm-10">
                @ViewBag.medicalServiceName
            </dd>
            <dt class="col-sm-2">
                Nombre del Profesional:
            </dt>
            <dd class="col-sm-10">
                @ViewBag.professionalName
            </dd>
            <dt class="col-sm-2">
                Fecha y Hora del turno:
            </dt>
            <dd class="col-sm-10">
                @ViewBag.dateTime
            </dd>
        </dl>
    </div>
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="MyTurns">
                        <div class="form-group">
                            <input type="submit" value="Confirmar" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>

            <div>
                <a asp-action="SelectMedicalService" class="btn btn-outline-info ml-1">Volver</a>
            </div>

            @section Scripts {
                @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
            }
</body>
</html>
