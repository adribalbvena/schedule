@model tp_nt1.Models.Turn

@{
    ViewData["Title"] = "Cancelar Turno";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>
</head>
<body>

<h3>Seguro que desea cancelar este turno?</h3>
<div>
    <h4>Turno</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Confirmed)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Confirmed)
            {
                <p>Confirmado</p>
            }
            else
            {
                <p>No Confirmado</p>
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Active)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Active)
            {
                <p>Activo</p>
            }
            else
            {
                <p>Inactivo</p>
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreationDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreationDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CancelDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CancelDescription)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Patient)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Patient.FullName)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Professional)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Professional.FullName)
        </dd class>
    </dl>
    
    <form asp-action="Cancel">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="All" class="text-danger"></div> 
        <input type="submit" value="Cancelar" class="btn btn-danger" />
        <a class="btn btn-outline-info ml-1" asp-action="MyTurns">Volver</a>
    </form>
</div>
</body>
</html>
