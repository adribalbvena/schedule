@{
    Layout = "_LayoutLogin";
}

<div class="text-center">
    <h1>Agenda de Turnos</h1>
</div>

<hr />

<div class="card mb-3" style="justify-content: center; background-color: #f0f5f5;">
    <div class="row no-gutters">
        <div class="col-md-4">
            <img src="~/img/login1.jpg" class="card-img" alt="...">
        </div>
        <div class="col-md-8">
            <div class="card-body col-md-6">
                <h3 class="card-title">Login</h3>
                <form method="post" asp-action="Login">
                    <div class="text-danger">
                        @ViewBag.Error
                    </div>
                    <div class="form-group">
                        <label laber-for="role" class="control-label">Rol:</label>
                        <input name="role" type="radio" value="@Role.Administrador"/> @Role.Administrador.ToString()
                        <input name="role" type="radio" value="@Role.Paciente" /> @Role.Paciente.ToString()
                        <input name="role" type="radio" value="@Role.Profesional" /> @Role.Profesional.ToString()
                    </div>
                    <div class="form-group">
                        <label laber-for="username" class="control-label">Email:</label>
                            <input name="username" class="form-control" type="text" value="@ViewBag.Username" />                    
                    </div>
                    <div class="form-group">
                        <label label-for="Password" class="control-label">Contraseña:</label>
                            <input name="password" class="form-control" type="password" />               
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Ingresar" class="btn btn-primary" />
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
